# Use Node 20 Alpine for small image
FROM node:20-alpine

WORKDIR /usr/src/app

# Copy only package files first to leverage cache
COPY package*.json ./

# Install dependencies (production only)
RUN npm install --production

# Copy all SEO audit source code, including static-pages
COPY . .

# Run the SEO audit script
CMD ["node", "run_audit_prd.js"]
